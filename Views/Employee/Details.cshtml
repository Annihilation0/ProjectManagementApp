<!--Form for displaying information about the employee-->
@model ProjectManagementApp.Models.ViewModels.EmployeeViewModel
@{
    var employee = Model;
}

<!DOCTYPE html>
<html>
<head>
    <title>Employees</title>
</head>
<body>
    <h1>Employee info</h1>
    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employe ID</th>
                    <th>Full Name</th>
                    <th>Company</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                    <tr class="employee-row" data-employee-id="@employee.EmployeeID">
                        <td>@employee.EmployeeID</td>
                        <td>@employee.FullName</td>
                        <td>@employee.Company.CompanyName</td>
                        <td>@employee.Email</td>                       
                    </tr>
            </tbody>
        </table>
    </div>
    <h1>Employee projects</h1>
    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Project ID</th>
                    <th>Project Name</th>
                    <th>Client Company</th>
                    <th>Execution Company</th>
                    <th>Project Manager</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Priority</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in employee.Projects)
                {
                    <tr class="project-row" data-project-id="@project.ProjectID">
                        <td>@project.ProjectID</td>
                        <td>@project.ProjectName</td>
                        <td>@project.ClientCompanyName</td>
                        <td>@project.ExecutionCompanyName</td>
                        <td>@project.ProjectManagerFullName</td>
                        <td>@project.StartDate</td>
                        <td>@project.EndDate</td>
                        <td>@project.Priority</td>
                        <td>@project.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.employee-row').click(function () {
                var employeeId = $(this).data('employee-id');
                window.location.href = '/Employee/Details?employeeId=' + employeeId;
            });
        });

        $(document).ready(function () {
            $('.project-row').click(function () {
                var projectId = $(this).data('project-id');
                window.location.href = '/Project/Details?projectId=' + projectId;
            });
        });
    </script>
</body>
</html>

