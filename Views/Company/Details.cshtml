<!--Form for displaying information about the company-->
@model ProjectManagementApp.Models.Models.Company
@{
    var company = Model;
    var employees = company.Employees;
}


<!DOCTYPE html>
<html>
<head>
    <title>Companies</title>
</head>
<body>
    <h1>Company info</h1>

    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Company ID</th>
                    <th>Company Name</th>
                </tr>
            </thead>
            <tbody>              
                    <tr class="company-row" data-company-id="@company.CompanyID">
                        <td>@company.CompanyID</td>
                        <td>@company.CompanyName</td>
                    </tr>               
            </tbody>
        </table>
    </div>
    <h1>Company employees</h1>
    <div class="container">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Employe ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>             
                    @foreach (var employee in employees)
                    {
                        <tr class="employee-row" data-employee-id="@employee.EmployeeID">
                            <td>@employee.EmployeeID</td>
                            <td>@employee.FirstName @employee.MiddleName @employee.LastName</td>
                            <td>@employee.Email</td>
                        </tr>
                    }
                
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.company-row').click(function () {
                var companyId = $(this).data('company-id');
                window.location.href = '/Company/Details?companyId=' + companyId;
            });
        });

        $(document).ready(function () {
            $('.employee-row').click(function () {
                var employeeId = $(this).data('employee-id');
                window.location.href = '/Employee/Details?employeeId=' + employeeId;
            });
        });
    </script>
</body>
</html>

